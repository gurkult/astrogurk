---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};

import { DISCORD_INVITE } from '~/constants';
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Different plans for every need"
    subtitle="Everyone should be able to become a Gurkan, so we offer a range of plans to accomodate the needs of everyone."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our prices"
    subtitle="Choose the plan that works for you. Other than the roles below, there are more roles you can get later on, by contributing meaningfully to the community."
    prices={[
      {
        title: 'Non-gurkan',
        subtitle: 'Optimal if you have no interest in becoming a Gurkan',
        price: 0,
        period: 'per month',
        items: [
          {
            description: 'No perks',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Leave now',
          href: 'https://www.youtube.com/watch?v=dQw4w9WgXcQ',
        },
      },
      {
        title: 'gurkan',
        subtitle: 'Enjoy the perks of being a Gurkan, for free, forever.',
        price: 0,
        period: 'for life',
        items: [
          {
            description: 'Be a part of a large community of likeminded people',
          },
          {
            description: 'The fancy Gurkan green role on Discord',
          },
          {
            description: 'Access to the Minecraft server',
          },
          {
            description: 'Bragging rights for being awesome',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Join now',
          href: DISCORD_INVITE,
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'contributor gurkan',
        subtitle: 'Contribute meaningfully to Gurkult and get rewarded for it.',
        price: 0,
        period: 'for life',
        items: [
          {
            description: 'Everything in "Gurkan"',
          },
          {
            description: 'The vibrant Contributor role on Discord',
          },
          {
            description: 'Access to the private testing server',
          },
          {
            description: 'Being a central part of the community',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Apply now',
          href: DISCORD_INVITE,
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Perks of being a Gurkan"
    subtitle="Discover the advantages of being a Gurkan, and how you can get the most out of your membership."
    columns={2}
    items={[
      {
        title: 'Be part of a community',
        description: 'Join a large community of likeminded people, and make new friends from all over the world.',
        icon: 'tabler:users',
      },
      {
        title: 'Gurkcraft',
        description: "Access to the Gurkult Minecraft server, where you can build and explore to your heart's content.",
        icon: 'tabler:pick',
      },
      {
        title: 'Endless programming projects',
        description: 'As an open source community, there are always new projects to contribute to and learn from.',
        icon: 'tabler:code',
      },
      {
        title: 'Gurkult merchandise',
        description: 'Get access to exclusive Gurkult merchandise, such as stickers, t-shirts, and more.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'No-cult cult',
        description: 'As a cult, we praise cucumbers. However, we will never exploit you for monitary gain.',
        icon: 'tabler:heart',
      },
      {
        title: 'Instant Access',
        description: `Immediate access all the perks of being a Gurkan right after joining!.`,
        icon: 'tabler:bolt',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="A guided journey to becoming a Gurkan"
    tagline="simplified process"
    isReversed={true}
    items={[
      {
        title: 'Explore plans',
        icon: 'tabler:number-1',
      },
      {
        title: 'Join the Gurkult server',
        icon: 'tabler:number-2',
      },
      {
        title: 'Be respectful to fellow Gurkans',
        icon: 'tabler:number-3',
      },
      {
        title: 'Enjoy the perks of being a Gurkan!',
        icon: 'tabler:number-4',
      },
    ]}
    image={{
      src: '/images/cucumber-path.png',
      alt: 'Steps image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Choosing the right plan is important, and we're here to answer your questions. If you have any other questions, feel free to join the server and ask us there!"
    columns={1}
    items={[
      {
        title: 'Are there any obligations to being a Gurkan?',
        description:
          'We expect everyone to be nice and respectful to each other, and to praise cucumbers in their own ways. Other than that, there are no obligations!',
      },
      {
        title: 'Can I test-join the cult before deciding if I want to become a Gurkan?',
        description:
          "We're an inclusive community, and welcome you to join us and see if you like it! Furthermore, you're always free to leave the server if you change your mind, but at heart you'll always be a Gurkan to us.",
      },
      {
        title: 'Are there any hidden fees beyond the displayed cost?',
        description: 'Nope! This cult is completely free of charge.',
      },
      {
        title: 'What payment methods do you accept?',
        description: 'We accept payments of 0 GRK (Gurkoins) from any bank registered in Gurkland.',
      },
      {
        title: "What's the best plan for someone who prefers melons over cucumbers?",
        description: 'This is not the place for melons, so please select the "Non-Gurkan"-plan and leave.',
      },
      {
        title: 'Are there other plans/roles I can get in the future?',
        description:
          'Certainly! We have a range of roles you can get by contributing meaningfully to the community. For example: Gurkan Lord, Moderator, and more.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to become a Gurkan?"
    subtitle="Join our global community of Cucumber lovers, and start reaping the benefits!"
    actions={[
      {
        variant: 'primary',
        text: 'Join now',
        href: DISCORD_INVITE,
      },
    ]}
  />
</Layout>
